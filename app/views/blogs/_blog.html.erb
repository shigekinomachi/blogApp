  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <%= simple_format(blog.text) %>
          <span class="name">
            <a href="/users/<%= blog.user_id %>">
            </a>
          </span>
        </div>
        <div class="card-action">
          <ul>
            <li><%= blog.user.nickname %></li>
            <li><%= link_to 'Detail', "/blogs/#{blog.id}", method: :get %></li>
            <% if user_signed_in? && current_user.id == blog.user_id %>
            <li><%= link_to 'Edit', "/blogs/#{blog.id}/edit", method: :get %></li>
            <li><%= link_to 'Delete', "/blogs/#{blog.id}", method: :delete %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
